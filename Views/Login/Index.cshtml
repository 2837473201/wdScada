    <script>
    // $(document).ready(function () {
    getwindowinnerWidth();
    function getwindowinnerWidth() {
        var wiw = window.innerWidth;
        if (wiw < 768) {
            appendCss("css/Login.css");
            $(".login-ph").css("display", "block");
        }
        else {
            removeCss("css/Login.css");
            $(".login-pc").css("display", "block");
        }
    }
    function appendCss(href) {
        var linkArr = document.getElementsByTagName("link");
        for (var i = 0; i < linkArr.length; i++) {
            if (linkArr[i] && linkArr[i].getAttribute("rel") && linkArr[i].getAttribute("href").indexOf("href")) {
                return false;
            }
        }//for i
        var link = document.createElement("link");
        link.setAttribute("rel", "stylesheet");
        link.setAttribute("href", href);
        document.getElementsByTagName("head")[0].appendChild(link);
    }
    function removeCss(href) {
        var linkArr = document.getElementsByTagName("link");
        for (var i = 0; i < linkArr.length; i++) {
            if (linkArr[i] && linkArr[i].getAttribute("rel") && linkArr[i].getAttribute("href").indexOf(href)) {
                linkArr[i].parentNode.removeChild(linkArr[i]);
            }
        }//for i
    }
    // });//ready
    </script>

